# kie.ai API Key
KIE_API_KEY=your_api_key_here

# OpenRouter.ai API Key (for speech-to-text)
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Django settings
DJANGO_SECRET_KEY=your-secret-key-change-in-production
DEBUG=true

# Server settings
HOST=0.0.0.0
PORT=8000

# Image similarity algorithm
SIMILARITY_MODEL=hybrid  # Options: ssim, embeddings, hybrid
SIMILARITY_USE_HYBRID=true  # Deprecated: use SIMILARITY_MODEL instead
SIMILARITY_EMBEDDING_WEIGHT=0.7  # Weight for embedding similarity (0.0-1.0)
SIMILARITY_SSIM_WEIGHT=0.3  # Weight for SSIM similarity (0.0-1.0)
SIMILARITY_SENSITIVITY=1.0  # Rigour/strictness: Higher = more strict/lower scores (2.0-5.0 for strict, 0.5-0.8 for lenient, default 1.0)

# Non-linear scaling for better discrimination
SIMILARITY_USE_NONLINEAR=true  # Enable non-linear scaling (different images max 10%, similar images 60%+)
SIMILARITY_MIN_THRESHOLD=0.3  # Below this = different images (max 10% similarity)
SIMILARITY_MAX_THRESHOLD=0.7  # Above this = similar images (60%+ similarity)


